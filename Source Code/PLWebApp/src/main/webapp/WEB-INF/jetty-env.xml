<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.mortbay.jetty.webapp.WebAppContext">
    <New id="DefaultDS" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>jdbc/plweb</Arg>
        <Arg>
           <New class="org.apache.commons.dbcp.BasicDataSource">
               <Set name="driverClassName">com.mysql.jdbc.Driver</Set>
               <Set name="url">jdbc:mysql://oradb2.plweb.org/plweb?useUnicode=true&amp;characterEncoding=UTF-8</Set>
               <Set name="username">sta</Set>
               <Set name="password">stastasta</Set>
           </New>
       </Arg>
    </New>
</Configure>
